export GITHUB_TOKEN=<your-token>
export GITHUB_USER=<your-username>

flux bootstrap github \
  --owner=$GITHUB_USER \
  --repository=my-repo \
  --branch=main \
  --path=clusters/my-cluster \
  --personal
my-repo/
├── clusters/
│   └── my-cluster/
│       ├── deployment.yaml
│       ├── service.yaml

sudo apt-get install -y sops  # Debian/Ubuntu
sudo apt-get install -y age
age-keygen -o age.agekey

cat > ~/.sops.yaml << EOF
creation_rules:
  - path_regex: .*.yaml$
    age: >-
      age1gqv7ce8639r8zu9hv699e5s46f2hqqcu3p7ll4px8f7lkwlsly7qpuchx7
EOF

# Replace with your actual public key
PUBLIC_KEY=$(cat ~/.sops/age-key.txt | grep "public key:" | cut -d ' ' -f 4)
sed -i "age1gqv7ce8639r8zu9hv699e5s46f2hqqcu3p7ll4px8f7lkwlsly7qpuchx7" ~/.sops.yaml